{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["airbnb-base", "plugin:import/typescript"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "rules": {
        "no-console": "off",
        "indent": ["error", 4],
        "comma-dangle": "off",
        "operator-linebreak": "off",
        "import/extensions": "off",
        "no-new": "off",
        "lines-between-class-members": "off"
    },
    "ignorePatterns": ["*.test.ts"]
}
